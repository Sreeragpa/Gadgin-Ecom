<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GADGIN</title>
    <link rel="icon" type="image/PNG" href="\img\gadgin.png">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Bootstrap -->
    <!-- Stylesheets -->

    <!-- Stylesheets -->
    <!-- Fontawesome -->
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <!-- Fontawesome -->
    <link href="https://cdn.jsdelivr.net/npm/boosted@5.3.2/dist/css/boosted.min.css" rel="stylesheet"
        integrity="sha384-fyenpx19UpfUhZ+SD9o9IdxeIJKE6upKx0B54OcXy1TqnO660Qw9xw6rOASP+eir" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheet/main.css">
    <link rel="stylesheet" href="/stylesheet/homestyle.css">
    <link rel="stylesheet" href="/stylesheet/accountspage.css">
    <link rel="stylesheet" href="/stylesheet/cartstyle.css">

</head>

<body>

    <!-- Header Starts -->
    <%-include('include/_header')%>
        <!-- Header Ends -->


        <!-- MAIN -->
        <%if(messages.success){%>
            <!-- Sweetalert -->
            <div id="sweetalert-overlay" class="sweetalert-overlay">
                <div id="sweetalert" class="sweetalert">
                    <i class="fa-regular fa-circle-check" style="color: #00ff40;"></i>
                    <p class="text-white fw-bold mt-2">
                        <%=messages.success%>
                    </p>
                    <button id="okBtn" class="okBtn m-0">Ok</button>
                    <!-- <button id="cancelBtn" class="cancelBtn">No</button> -->
                </div>
            </div>
            <!-- Sweetalert -->
            <%}%>
                <div class="container-fluid p-0 main-div">
                    <!-- Content -->
                    <div class="inner-content-div-user text-white">


                        <!-- Checkout Heading -->
                        <div class="cart-heading gap-2">
                            <div class="">
                                <h4 class="m-0">Manage Wallet</h4>
                            </div>
                            <div>

                            </div>
                        </div>
                        <hr>
                        <!-- / Checckout Heading -->
                        <!-- Cart Content -->
                        <div class="wallet-content">
                            <!-- Address -->


                            <div class="wallet-div">
                                <div class="mt-2 d-flex justify-content-center">
                                    <span class="fw-bold item-title"> <i class="fa-solid fa-wallet"
                                            style="color: #ffffff;"></i> Wallet </span>
                                </div>
                                <div class="wallet-config">
                                    <div class="">
                                        <span>Total Balance</span>
                                        <br>
                                        <span
                                            class="font-sz-18"><%=(wallet.walletbalance)?(wallet.walletbalance).toLocaleString('en-IN',
                                                { style: 'currency' , currency: 'INR' }):'0'%></span>
                                    </div>
                                    <div class="add-money-div">
                                        <!-- <form action=""> -->
                                        <a class="add-money-btn text-dark" href="/wallet/addmoney">Add Money</a>
                                        <!-- </form> -->
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <p>Transactions</p>
                                    <table class="table table-dark wallet-transaction-table">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Amount</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%for(let i=0;i<wallet?.transactions?.length;i++){%>
                                                <tr>
                                                    <th scope="row">
                                                        <%=i+1%>
                                                    </th>
                                                    <td>
                                                        <%=wallet.transactions[i].timestamp.toString().split('T')[0]%>
                                                    </td>
                                                    <td
                                                        class="<%=(wallet.transactions[i].credit)?'text-success':'text-danger'%>">
                                                        <%=(wallet.transactions[i].amount).toLocaleString('en-IN', {
                                                            style: 'currency' , currency: 'INR' })%>

                                                            <%if(wallet.transactions[i].credit){%>
                                                                <i class="fa-solid fa-arrow-trend-up"
                                                                    style="color: #37ff00;"></i>
                                                                <%}else{%>
                                                                    <i class="fa-solid fa-arrow-trend-down"
                                                                        style="color: #ff0000;"></i>
                                                                    <%}%>

                                                    </td>
                                                </tr>
                                                <%}%>
                                                    <!--                            
                                  <tr>
                                    <th scope="row">2</th>
                                    <td>12/10/2023</td>
                                    <td class="text-success">₹600 <i class="fa-solid fa-arrow-trend-up" style="color: #00ff40;"></i></td>
                                  </tr>
                                  <tr>
                                    <th scope="row">3</th>
                                    <td >12/10/2023</td>
                                    <td class="text-danger">₹900 <i class="fa-solid fa-arrow-trend-down" style="color: #ff0000;"></i></td>
                                  </tr> -->
                                        </tbody>
                                    </table>
                                </div>

                            </div>

                            <!-- / Address -->
                        </div>
                        <!-- /Cart Content -->



                    </div>

                    <!-- /Content -->

                </div>
                <!-- /MAIN -->



                <!-- Footer -->
                <%- include('include/_footer') %>
                    <!-- Footer -->
                    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


</body>

</html>